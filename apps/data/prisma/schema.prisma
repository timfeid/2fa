generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id

  @@map("users")
}

enum HashingAlgorithm {
  SHA1
  SHA256
  SHA512
}

model Account {
  id        String           @id
  digits    Int              @db.SmallInt
  skew      Int              @db.SmallInt
  step      BigInt
  secret    String           @db.VarChar(256)
  issuer    String
  username  String
  algorithm HashingAlgorithm

  @@map("accounts")
}
